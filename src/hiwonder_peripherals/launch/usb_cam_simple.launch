<launch>
  <arg name="usb_cam_name" default="usb_cam_simple" />

  <node name="$(arg usb_cam_name)" pkg="usb_cam" type="usb_cam_node" respawn="false" respawn_delay="2" output="screen" >
    <param name="video_device" value="/dev/depth_cam" />  <!--usb摄像头已被映射为/dev/usb_cam(usb camera is mapped as /dev/usb_cam)-->
    <param name="image_width" value="320" /> <!--# default 640 -->
    <param name="image_height" value="240" /> <!--# default 480 -->
    <param name="pixel_format" value="yuyv" />
    <param name="camera_frame_id" value="$(arg usb_cam_name)" />
    <param name="io_method" value="mmap"/>
    
    <!-- Compress the image -->
    <param name="compressed_format" value="jpeg" />
    <param name="jpeg_quality" value="80" />


    <!-- Controll the frame rate-->
    <param name="framerate" value="10" />
    <!-- Disable unnecessary image transport plugins-->
    <param name="disable_pub_plugins" value="compressedDepth,theora" />
  </node>

  <!-- 
    This is image_proc node that atutomatically loaded by ROS
    It is responsible for processing hte raw camera images and generating additional image topics
  <node name="image_proc" pkg="image_proc" type="image_proc" ns="$(arg usb_cam_name)" />
  -->

  <!--
  <node name="image_view" pkg="image_view" type="image_view" respawn="false" output="screen">
    <remap from="image" to="/usb_cam/image_raw"/>
    <param name="autosize" value="true" />
  </node>
  -->
</launch>
